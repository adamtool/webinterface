// sys wins because s2b yields a good exit
.name "infflowchains 2b"
.type LPN
.description "Testing the correctness of additional system places in the unfolding"
.options
winningCondition="E_SAFETY"

.places
s1
s2[bad="true"]
s2b
s3

.transitions
t3[tfl="{s1}->{s2,s2b},{}->{s3}"]
t4[tfl="{s2,s3,s2b}->{s1}"]

.flows
t3: {s1} -> {s2,s2b,s3}
t4: {s2,s2b,s3} -> {s1}

.initial_marking {s1}
