// Testing the bad decision by not starting with an mcut
.name "noInitialMcut"
.type LPN
.options
winningCondition="SAFETY"

.places
env[env="true"]
env1[env="true"]
envA[env="true"]
envB[env="true"]
sys[token=1]
sysB1[token=1]
sys2[token=1]
sys3[token=1]
sysA[token=1]
sysB2[token=1]
bad[token=1, bad="true"]

.transitions
sl
sr
split
ea
eb
sa
sb
b1
b2

.flows
sl: {sys} -> {sys2}
sr: {sys} -> {sysB1}
split: {env,sys2} -> {env1,sys3}
ea: {env1} -> {envA}
eb: {env1} -> {envB}
sa: {sys3} -> {sysA}
sb: {sys3} -> {sysB2}
b1: {envA,sysB1} -> {bad}
b2: {envB,sysA} -> {bad}

.initial_marking {sys,env}
