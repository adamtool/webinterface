// Net burglar example
.name "burglar.net"
.type LPN
.description "alarm system"
.options
winningCondition="SAFETY"

.places
env[env="true"]
s1[env="true"]
s2[env="true"]
s3
s4
ea[env="true"]
a
b
eb[env="true"]
pa
pb
ab
aa
bb
ba
qbadA[bad="true"]
qbadB[bad="true"]

.transitions
